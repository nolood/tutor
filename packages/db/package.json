{
  "name": "@repo/db",
  "files": [
    "dist/**"
  ],
  "exports": {
    "./db": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./src/schema/schema.ts",
      "default": "./dist/schema/schema.js"
    }
  },
  "scripts": {
    "dev": "dotenv tsc --watch",
    "build": "dotenv tsc",
    "db:push": "cross-env NODE_ENV=dev drizzle-kit push",
    "db:studio": "cross-env NODE_ENV=dev drizzle-kit studio",
    "db:generate": "cross-env NODE_ENV=dev drizzle-kit generate:pg"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "drizzle-kit": "^0.23.0",
    "eslint": "^8.57.0",
    "typescript": "latest",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "dotenv-cli": "^7.4.2",
    "drizzle-orm": "^0.32.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  }
}